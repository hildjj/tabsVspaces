# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

# Indentation override for bad example
[tabs.c]
indent_style = tab
# cheating, but to make a point
indent_size = 8
tab_width = 2
